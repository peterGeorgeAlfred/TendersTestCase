@model IEnumerable<TendersTestCase.Models.Booklets>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Booklets</h2>

<p>
    @Html.ActionLink("Create New", "Create" , new { } , new { @class = "btn btn-primary"})
</p>
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Activity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BookletID } , new { @class ="btn btn-success"}) 
            @Html.ActionLink("Details", "Details", new { id=item.BookletID }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.BookletID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@model IEnumerable<TendersTestCase.Models.Report>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Report</h1>


@if ( Model.Count() == 0)
{
    <div class="alert alert-danger" >
        There is No Sales Yet.
    </div>
}
else
{
<table class="table table-bordered table-responsive">
    <thead style="background-color:mediumseagreen">
        <tr>
            <th>
                @Html.DisplayNameFor(i => i.Date)
            </th>
            <th>
                @Html.DisplayNameFor(i => i.BookletID)

            </th>
            <th>
                @Html.DisplayNameFor(i => i.CustomerID)

            </th>
            <th>
                @Html.DisplayNameFor(i => i.CustomerName)

            </th>

        </tr>

     
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookletID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>

            </tr>
        }
    </tbody>
</table>
} 